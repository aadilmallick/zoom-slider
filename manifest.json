{
  "manifest_version": 3,
  "name": "Zoom Slider",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Click to change zoom levels",
    "default_icon": {
      "16": "public/icon.png",
      "32": "public/icon.png",
      "48": "public/icon.png",
